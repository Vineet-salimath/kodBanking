# Aiven MySQL Credentials
DB_HOST=your-host.aivencloud.com
DB_PORT=25673
DB_USER=avnadmin
DB_PASSWORD=your_password_here
DB_NAME=defaultdb

# SSL: path to CA cert file relative to project root (e.g. config/ca.pem)
# Leave blank to use rejectUnauthorized:false (SSL still active, no cert pinning)
DB_SSL_CA=

# JWT
JWT_SECRET=change_this_to_a_long_random_secret_string_min_32_chars
JWT_EXPIRY=3600

# Server
PORT=5000
NODE_ENV=production

# CORS â€“ comma-separated allowed origins
CLIENT_ORIGIN=https://your-frontend.vercel.app
