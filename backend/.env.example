# Aiven MySQL Credentials
DB_HOST=your-host.aivencloud.com
DB_PORT=25673
DB_USER=avnadmin
DB_PASSWORD=your_password_here
DB_NAME=defaultdb

# SSL: path to CA cert file relative to project root (e.g. config/ca.pem)
# Leave blank to use rejectUnauthorized:false (SSL still active, no cert pinning)
DB_SSL_CA=

# JWT
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_long_random_secret_string_min_64_chars
JWT_EXPIRY=3600

# Hugging Face AI
# Get your token at: https://huggingface.co/settings/tokens
HF_API_KEY=hf_your_token_here

# Server
PORT=5000
NODE_ENV=development

# CORS â€“ comma-separated allowed origins (no trailing slash)
CLIENT_ORIGIN=http://localhost:5173
# Production: CLIENT_ORIGIN=https://kodbank.vercel.app
